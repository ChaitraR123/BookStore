@model IEnumerable<BooKStore.Models.DTO.Publisher>
@{
}

<div class="container pt-5">
  
    <div class="row">
        <div class="col-md-6">
            <h3 style="text-align:center">Publishers</h3>

            <div class="row">
                <div class="col-md-12" style="text-align:right">
                    <a class="btn btn-dark" href="/Publisher/Add">+ Add </a>
                </div>
            </div>

            <br />
            <table  class="table table-stripped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>PublisherName</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                        <td>@item.PublisherName</td>
                        <td>
                                <a class="btn btn-success" href="/Publisher/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger" onclick="if(!confirm('are you sure you want to delete this')){return false}" href="/Publisher/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

