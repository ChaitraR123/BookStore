@model IEnumerable<BooKStore.Models.DTO.Genre>
@{
}

<div class="container pt-5">

    <div class="row">
        <div class="col-md-6">
            <h3 style="text-align:center">Genres</h3>
          
            <div class="row">
                <div class="col-md-12" style="text-align:right">
                    <a class="btn btn-dark" href="/Genre/Add">+ Add </a>
                </div>
            </div>
            <br />
            <table  class="table table-stripped table-bordered">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model){
                    <tr>
                        <td>@item.Name</td>
                        <td>
                                <a class="btn btn-success" href="/Genre/Update?id=@item.Id"><i class="bi bi-pen"></i> Edit</a> |
                                <a class="btn btn-danger" onclick="if(!confirm('are you sure you want to delete this')){return false}" href="/Genre/Delete?id=@item.Id"><i class="bi bi-trash"></i> Delete</a>
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

